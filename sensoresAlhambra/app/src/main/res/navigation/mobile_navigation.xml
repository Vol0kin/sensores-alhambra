    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_camera">

    <fragment
        android:id="@+id/nav_camera"
        android:name="com.example.sensoresAlhambra.ui.camera.CameraFragment"
        android:label="@string/menu_camera"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/nav_maps"
        android:name="com.example.sensoresAlhambra.ui.maps.MapsFragment"
        android:label="@string/menu_maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/nav_navigation"
        android:name="com.example.sensoresAlhambra.ui.navigation.NavigationFragment"
        android:label="@string/menu_navigation"
        tools:layout="@layout/fragment_navigation" />

    <fragment
        android:id="@+id/nav_exit"
        android:name="com.example.sensoresAlhambra.ui.exit.ExitFragment"
        android:label="@string/menu_exit"
